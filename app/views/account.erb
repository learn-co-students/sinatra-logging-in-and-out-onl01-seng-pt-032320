<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>title</title>
    <link rel="stylesheet" href="stylesheets/bootstrap.css" type="text/css">
  </head>
  <body id="page-top">

  <a href="/logout">Log Out</a>
      <% @user = Helpers.current_user(session)%>
       <% @u = Helpers.is_logged_in?(session)%>
